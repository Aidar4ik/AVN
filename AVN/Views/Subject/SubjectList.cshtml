@using AVN.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<SubjectVM>
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@if (User.IsInRole(RoleConst.AdminRole))
{
    <div id="toolbar">
        <a asp-controller="Subject" asp-action="Create">
            <input type="button" class="btn btn-success" value="Добавить" />
        </a>
    </div>
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="sparkline13-list">
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <table class="table-striped"
                                   id="subjectTable"
                                   data-toggle="table"
                                   data-pagination="true"
                                   data-search="true"
                                   data-show-columns="true"
                                   data-key-events="true"
                                   data-show-toggle="true"
                                   data-resizable="true"
                                   data-cookie="true"
                                   data-cookie-id-table="saveId"
                                   data-show-export="true"
                                   data-click-to-select="true"
                                   data-show-search-clear-button="true"
                                   data-filter-control="true"
                                   data-toolbar="#toolbar"
                                   data-show-refresh="true"
                                   data-show-fullscreen="true"
                                   data-show-columns-toggle-all="true"
                                   data-minimum-count-columns="2"
                                   data-show-pagination-switch="true"
                                   data-page-list="[10, 25, 50, 100, всё]"
                                   data-show-footer="true"
                                   data-locale="ru-RU">

                                <thead>
                                    <tr>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Title">
                                            @Html.DisplayNameFor(x => x.Title)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="CreditHours">
                                            @Html.DisplayNameFor(x => x.CreditCounts)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="HoursAmount">
                                            @Html.DisplayNameFor(x => x.HoursAmount)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Course">
                                            @Html.DisplayNameFor(x => x.Course)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Semester">
                                            @Html.DisplayNameFor(x => x.Semester)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="DepartmentId">
                                            @Html.DisplayNameFor(x => x.DepartmentId)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="EmployeeId">
                                            @Html.DisplayNameFor(x => x.EmployeeId)
                                        </th>
                                        @if (User.IsInRole(RoleConst.AdminRole))
                                        {
                                            <th>
                                                Действие
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreditCounts)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HoursAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Course)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Semester)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Employee.FullName)
                                            </td>
                                            <td>
                                                <span> @Html.ActionLink("", "Edit", "Subject", new { id = @item.Id.ToString() }, new { @class = "fa fa-edit" })</span> &emsp;
                                                <span> @Html.ActionLink("", "Details", "Subject", new { id = @item.Id.ToString() }, new { @class = "fa fa-trash" })</span> &emsp;
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @* --- Jquery --- *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @* --- Bootstrap --- *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* --- Скрипт таблицы --- *@
    <script src="https://unpkg.com/tableexport.jquery.plugin/tableExport.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.20.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.20.1/dist/bootstrap-table-locale-all.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.20.1/dist/extensions/export/bootstrap-table-export.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.20.1/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>

}