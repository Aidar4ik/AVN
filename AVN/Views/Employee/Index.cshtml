@using AVN.Utility
@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Работники";
}

<h2 class="text-center mb-2">Работники</h2>
<hr class="mb-4">

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="sparkline13-list">
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <table class="table-striped"
                                   id="table"
                                   data-toggle="table"
                                   data-pagination="true"
                                   data-search="true"
                                   data-show-columns="true"
                                   data-key-events="true"
                                   data-show-toggle="true"
                                   data-resizable="true"
                                   data-cookie="true"
                                   data-cookie-id-table="saveId"
                                   data-show-export="true"
                                   data-click-to-select="true"
                                   data-show-search-clear-button="true"
                                   data-filter-control="true"
                                   data-toolbar="#toolbar"
                                   data-show-refresh="true"
                                   data-show-fullscreen="true"
                                   data-show-columns-toggle-all="true"
                                   data-minimum-count-columns="2"
                                   data-show-pagination-switch="true"
                                   data-page-list="[10, 25, 50, 100, всё]"
                                   data-show-footer="true"
                                   data-locale="ru-RU">

                                <thead>
                                    <tr>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="SName">
                                            @Html.DisplayNameFor(x => x.SName)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="DescrNameiption">
                                            @Html.DisplayNameFor(x => x.Name)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="PName">
                                            @Html.DisplayNameFor(x => x.PName)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="DateOfBirth">
                                            @Html.DisplayNameFor(x => x.DateOfBirth)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Email">
                                            @Html.DisplayNameFor(x => x.Email)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Gender">
                                            @Html.DisplayNameFor(x => x.Gender)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Position">
                                            @Html.DisplayNameFor(x => x.Position)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="Address">
                                            @Html.DisplayNameFor(x => x.Address)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="PhoneNumber">
                                            @Html.DisplayNameFor(x => x.PhoneNumber)
                                        </th>
                                        <th scope="col" data-sortable="true" data-filter-control="input" data-field="DepartmentId">
                                            @Html.DisplayNameFor(x => x.DepartmentId)
                                        </th>
                                        @if (User.IsInRole(RoleConst.AdminRole))
                                        {
                                            <th>
                                                Действие
                                            </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Position)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                                            </td>
                                            @if (User.IsInRole(RoleConst.AdminRole))
                                            {
                                                <td>
                                                    <span> @Html.ActionLink("", "Edit", "Employee", new { id = @item.Id.ToString() }, new { @class = "fa fa-edit" })</span> &emsp;
                                                    <span> @Html.ActionLink("", "Delete", "Employee", new { id = @item.Id.ToString() }, new { @class = "fa fa-trash" })</span> &emsp;
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
