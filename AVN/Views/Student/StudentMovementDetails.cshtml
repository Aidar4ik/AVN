@model StudentMovementVM
@using AVN.Utility;

<style>
    .datatable-dashv1-list table {
        width: 100%;
    }

    .datatable-dashv1-list th,
    .datatable-dashv1-list td {
        width: 50%;
        padding: 10px;
    }

    .datatable-dashv1-list .narrow-cell {
        width: 20%;
    }

    .datatable-dashv1-list th {
        background-color: #d6eaf8;
    }
</style>

<div class="mb-3">
    <a href="@Url.Action("Edit", "Student", new { id = Model.StudentId })" class="btn btn-primary fas fa-arrow-alt-circle-left"> Назад</a>
</div>

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="sparkline13-list">
                    <div class="sparkline13-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <table class="table-bordered">
                                <tbody>
                                    <tr>
                                        <th scope="row" class="narrow-cell">
                                            @Html.DisplayNameFor(model => model.OrderNumber)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.OrderNumber)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="narrow-cell">
                                            @Html.DisplayNameFor(model => model.MovementDate)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.MovementDate)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="narrow-cell">
                                            @Html.DisplayNameFor(model => model.MovementTypeId)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.MovementType.Name)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="narrow-cell">
                                            @Html.DisplayNameFor(model => model.AcademicYearId)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.AcademicYear.Name)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="narrow-cell">
                                            @Html.DisplayNameFor(model => model.OldGroupId)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.OldGroup.GroupName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="narrow-cell">
                                            @Html.DisplayNameFor(model => model.NewGroupId)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(model => model.NewGroup.GroupName)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="text-right">
    @if (User.IsInRole(RoleConst.AdminRole))
    {
        <p class="text-danger">
            Внимание! Если удалить текущую запись, то удалятся также связанные с ним данные!
        </p>
        <form action="/Student/DeleteStudentMovementConfirmed/@Model?.Id" method="post">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-delete"></i> Удалить запись безвозвратно
            </button>
        </form>
    }
</div>