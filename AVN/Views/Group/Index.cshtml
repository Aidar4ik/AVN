                    localStorage.setItem(dropdownId, ''); // Save the empty value in localStorage
                }
            }

            function saveSelectedValue(dropdownId) {
                var selectedValue = $('#' + dropdownId).val();
                localStorage.setItem(dropdownId, selectedValue);
            }

        });
    </script>
