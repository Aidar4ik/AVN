@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Web.Areas.Catalog.Models
@model DepartmentViewModel
<form id="create-form" method="post" asp-controller="Department" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Name"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="DepartmentName" name="DepartmentName" class="form-control">
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["DepartmentShortName"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="DepartmentShortName" name="DepartmentShortName" class="form-control">
                    <span asp-validation-for="DepartmentShortName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>